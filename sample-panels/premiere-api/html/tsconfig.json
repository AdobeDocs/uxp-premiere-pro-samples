{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "types": ["@adobe/cc-ext-uxp-types", "@types/node"],
    "outDir": "../build-html",
    "noImplicitAny": null,
    "esModuleInterop": true
  },
  "include": ["./**/*.d.ts", "./**/*.ts", "./**/*.js", "package.json"],
  "exclude": ["node_modules", "scripts"]
}
